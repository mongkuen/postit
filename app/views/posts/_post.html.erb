<div class="row">
  <%= render 'vote', object: post %>
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url), target: "_blank"%></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by</span> <%= link_to post.creator.username, user_path(post.creator) %>
      <small>at <%= display_datetime(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} #{"comment".pluralize(post.comments.size)}", post_path(post)) %>
      </span>
      <br>
    </small>
  </div>
</div>
