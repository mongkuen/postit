<p class="pull-right">[<%= link_to "edit this post", edit_post_path(@post) %>]</p>

<p>
  <%= render @post.categories %>
</p>

<% header = link_to(@post.title, fix_url(@post.url)) %>
<%= render "shared/content_title", title: header  %>

<p>
  <%= @post.description %>
  <hr>
</p>

<%= form_for [@post, @comment] do |f| %>
  <%= render 'shared/errors', object: @comment %>
  <div class="control-group">
    <%= f.label :body, "Leave a comment" %>
    <%= f.text_area :body, rows: 3, class: "span4" %>
  </div>
  <%= f.submit "Create Comment", class: "btn btn-primary" %>
<% end %>

<h5>Comments:</h5>
<% @post.comments.each do |comment| %>
  <div class="well">
    <em>"<%= comment.body %>"</em>
    <br>
    <span class="quiet">by</span> <%= comment.creator.username %>
    <small>at <%= display_datetime(comment.created_at) %></small>
  </div>
<% end %>
